<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal -->
    <style name="Theme.CarlyDeanTest" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Tema para Splash Screen -->
    <style name="Theme.CarlyDeanTest.Splash" parent="Theme.CarlyDeanTest">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <!-- Tema para pantalla completa (Reader) -->
    <style name="Theme.CarlyDeanTest.Fullscreen" parent="Theme.CarlyDeanTest">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Estilo para TabLayout -->
    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
        <item name="tabTextColor">@color/tab_unselected</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:background">@color/surface</item>
    </style>

    <!-- Estilo para botones principales -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para cards -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

</resources>